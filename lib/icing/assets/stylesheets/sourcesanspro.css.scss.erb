@font-face {
    font-family: 'Source Sans Pro';
    src: url(<%= asset_path('SourceSansPro-Bold-webfont.eot') %>);
    src: url(<%= asset_path('SourceSansPro-Bold-webfont.eot') %>) format('embedded-opentype'),
         url(<%= asset_path('SourceSansPro-Bold-webfont.woff') %>) format('woff'),
         url(<%= asset_path('SourceSansPro-Bold-webfont.ttf') %>) format('truetype'),
         url(<%= asset_path('SourceSansPro-Bold-webfont.svg') %>) format('svg');
    font-weight: 800;
    font-style: normal;

}


